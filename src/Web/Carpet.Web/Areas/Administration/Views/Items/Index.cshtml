@using Carpet.Common.Constants
@model IEnumerable<Carpet.Web.ViewModels.Administration.Items.ItemIndexViewModel>

@{
    ViewData["Title"] = "Index";
    var count = 1;
}

<h1 class="title text-center" style="margin-top: 35px;">ЦЕНОРАЗПИС УСЛУГИ</h1>
<div class="row justify-content-end" style="padding-right:18px;">
    <p>
        <a asp-area="@GlobalConstants.AreaAdministrationName"
           asp-controller="@GlobalConstants.ContollerItemsName"
           asp-action="@(GlobalConstants.ActionCreateName)"
           class="btn btn-outline-primary">Create New</a>
    </p>
</div>

<table id="items" class="display" style="width:100%">
    <thead>
        <tr class="text-center">
            <th rowspan="2">
                #
            </th>
            <th rowspan="2">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th rowspan="2">
                @Html.DisplayNameFor(model => model.OrdinaryPrice)
            </th>
            <th colspan="3">Добавка към цена за</th>
            <th rowspan="2"></th>
        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ExpressAddOnPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VacuumCleaningAddOnPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FlavorAddOnPrice)
            </th>
        </tr>
        
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @(count++)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td class="text-right" style="padding-right:30px;">
                    @Html.DisplayFor(modelItem => item.OrdinaryPrice)<span> лв.</span>
                </td>
                <td class="text-right" style="padding-right:30px;">
                    @Html.DisplayFor(modelItem => item.ExpressAddOnPrice)<span> лв.</span>
                </td>
                <td class="text-right" style="padding-right:30px;">
                    @Html.DisplayFor(modelItem => item.VacuumCleaningAddOnPrice)<span> лв.</span>
                </td>
                <td class="text-right" style="padding-right:30px;">
                    @Html.DisplayFor(modelItem => item.FlavorAddOnPrice)<span> лв.</span>
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-sm btn-outline-primary" }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-sm btn-outline-primary" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-sm btn-outline-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>
