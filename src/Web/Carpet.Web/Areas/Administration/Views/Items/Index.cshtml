@using Carpet.Common.Constants
@model IEnumerable<Carpet.Web.ViewModels.Administration.Items.ItemIndexViewModel>

@{
    ViewData["Title"] = "Index";
    var count = 1;
}

<h1>ЦЕНОРАЗПИС УСЛУГИ</h1>
<div class="row justify-content-end" style="padding-right:18px">
    <p>
        <a asp-area="@GlobalConstants.AreaAdministrationName"
           asp-controller="@GlobalConstants.ContollerItemsName"
           asp-action="@(GlobalConstants.ActionCreateName)"
           class="btn btn-outline-primary">Create New</a>
    </p>
</div>

<table id="items" class="display" style="width:100%">
    <thead>
        <tr class="text-center">
            <th>
                #
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrdinaryPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExpressAddOnPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VacuumCleaningAddOnPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FlavorAddOnPrice)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @(count++)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrdinaryPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ExpressAddOnPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VacuumCleaningAddOnPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FlavorAddOnPrice)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
