@using Carpet.Common.Constants
@model Carpet.Web.ViewModels.Administration.Employees.Edit.EmployeeEditViewModel

@{
    ViewData["Title"] = "Edit";
    var roles = (List<SelectListItem>)Model.RoleList;
}

<h1 class="row justify-content-md-center">РЕДАКТИРАНЕ</h1>

<h4 class="row justify-content-md-center" style="margin-top:15px;">Данни за служител</h4>
<hr class="row justify-content-md-center" />
<div class="row justify-content-md-center">
    <div class="col-md-6">
        <form asp-action="@GlobalConstants.ActionEditName">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="form-group col-md-6">
                    <label asp-for="FirstName" class="control-label"></label><span>*</span>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="LastName" class="control-label"></label><span>*</span>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-6">
                    <label asp-for="PhoneNumber" class="control-label"></label><span>*</span>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Salary" class="control-label"></label><span>*</span>
                    <input type="number" step="0.01" asp-for="Salary" class="form-control text-right" />
                    <span asp-validation-for="Salary" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="RoleName"></label><span>*</span>
                <select class="form-control" asp-for="RoleName" asp-items="@roles">
                    <option value="">Избери роля</option>
                </select>
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
            <div style="margin-bottom:15px; font-size:10px">* Задължително поле</div>
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary btn-block" />
            </div>
            <div style="margin-top:auto">
                <a asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
