@model Carpet.Web.ViewModels.Administration.Orders.AddVehicleToPickUp.OrderAddVehicleToPickUpViewModel

@{
    ViewData["Title"] = "AddVehicleToPickUp";
}

<h1 class="row justify-content-md-center">Добавяне на</h1>

<h4 class="row justify-content-md-center" style="margin-top:15px;">Превозно средство и дата за вземане към поръчка</h4>
<hr class="row justify-content-md-center" />
<div class="row justify-content-md-center"  style="font-size:14px">
    <div class="col-md-9">
        <form asp-action="AddVehicleForPickUp">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" class="form-control" hidden />
            <div class="row">
                <div class="form-group col-4">
                    <label asp-for="Customer.FirstName" class="control-label"></label>
                    <input asp-for="Customer.FirstName" class="form-control" disabled />
                    <span asp-validation-for="Customer.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group col-4">
                    <label asp-for="Customer.LastName" class="control-label"></label>
                    <input asp-for="Customer.LastName" class="form-control" disabled />
                    <span asp-validation-for="Customer.LastName" class="text-danger"></span>
                </div>
                <div class="form-group col-4">
                    <label asp-for="Customer.PhoneNumber" class="control-label"></label>
                    <input asp-for="Customer.PhoneNumber" class="form-control" disabled />
                    <span asp-validation-for="Customer.PhoneNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-4">
                    <label asp-for="IsExpress" class="control-label"></label>
                    <input asp-for="IsExpress" class="form-control" disabled />
                    <span asp-validation-for="IsExpress" class="text-danger"></span>
                </div>
                <div class="form-group col-4">
                    <label asp-for="ItemQuantitySetByUser" class="control-label"></label>
                    <input asp-for="ItemQuantitySetByUser" class="form-control" disabled />
                    <span asp-validation-for="ItemQuantitySetByUser" class="text-danger"></span>
                </div>
                <div class="form-group col-4">
                    <label asp-for="CreatedOn" class="control-label"></label>
                    <input asp-for="CreatedOn" class="form-control" disabled />
                    <span asp-validation-for="CreatedOn" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-6">
                    <label asp-for="Customer.PickUpAddress" class="control-label"></label>
                    <input asp-for="Customer.PickUpAddress" class="form-control" disabled />
                    <span asp-validation-for="Customer.PickUpAddress" class="text-danger"></span>
                </div>
                <div class="form-group col-6">
                    <label asp-for="StatusName" class="control-label"></label>
                    <input asp-for="StatusName" class="form-control" disabled />
                    <span asp-validation-for="StatusName" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-6">
                    <label asp-for="RegistrationNumber"></label><span>*</span>
                    <select class="form-control" asp-for="RegistrationNumber" asp-items="@(List<SelectListItem>)Model.VehicleList">
                        <option value="">Избери превозно средство</option>
                    </select>
                    <span asp-validation-for="RegistrationNumber" class="text-danger"></span>
                </div>
                <div class="form-group col-6">
                    <label asp-for="PickUpFor" class="control-label"></label><span>*</span>
                    <input asp-for="PickUpFor" class="form-control" />
                    <span asp-validation-for="PickUpFor" class="text-danger"></span>
                </div>
            </div>
            <div style="margin-bottom:15px; font-size:10px">* Задължително поле</div>
            <div class="form-group">
                <input type="submit" value="Set Vehicle and Date " class="btn btn-primary btn-block" />
            </div>
            <div>
                <a asp-area="@GlobalConstants.AreaAdministrationName"
                   asp-controller="@GlobalConstants.ContollerOrdersName"
                   asp-action="@GlobalConstants.ActionAllCreatedName">Back to List</a>
            </div>
        </form>
    </div>
</div>



